{
  "name": "@paylio/embed-js",
  "version": "0.1.2",
  "description": "Paylio Embed SDK for JavaScript/TypeScript â€” embed pricing grids with a single function call",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint --fix src/ tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paylio-org/paylio-embed-js.git"
  },
  "keywords": [
    "paylio",
    "embed",
    "pricing",
    "subscription",
    "checkout",
    "sdk"
  ],
  "author": "Paylio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paylio-org/paylio-embed-js/issues"
  },
  "homepage": "https://github.com/paylio-org/paylio-embed-js#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  }
}
